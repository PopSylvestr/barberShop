<h2>Check in</h2>
<p>On this page you can check in our Barbershop</p>

<form action="/visit" method="POST" role="form">
 
  <div class="form-group">
    <label>Your name</label>
    <input name="username" type="text" class="form-control" placeholder="Enter your name" value="<%= @username %>">
  </div>
  

  <div class="form-group">
    <label>Your phone</label>
    <input name="phone" type="text" class="form-control"  placeholder="Enter your phone" value=" <%= @phone %>">
  </div>
  

  <div class="form-group">
    <label>When will we wait you?</label>
    <input name="Date and Time" type="text" class="form-control"  placeholder="Enter Date and Time" value=" <%= @date and time %>">
  </div>

  <div class="form-group">
    <label>select your barber</label>
    
  

  <select name="barber" class="form-control">
  <option <%= @barber == 'Jessie Pinkman' ? 'selected' : '' %>>Jessie Pinkman</option>
 
  <option <%= @barber == 'Walter White' ? 'selected' : '' %>>Walter White</option>
 
  <option <%= @barber == 'Gus Fring' ? 'selected' : '' %>>Gus Fring</option>
 
</select>
  
</div>

<div class="form-group">
    <label>Color painting:</label>
   <select id="color" name="color">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
</select>
  </div>


  


  <button type="submit" class="btn btn-primary">Check in</button>
</form>

<script type="text/javascript">

$(function(){$('#color').simplecolorpicker()

  
});

;
  </script>